# Streamlit Secrets Configuration Template
# 
# This file shows the required configuration for the URDB Tariff Viewer app.
# 
# IMPORTANT: Never commit actual secrets to version control!
# 
# For Production (Streamlit Cloud):
#   1. Go to your app dashboard on share.streamlit.io
#   2. Click Settings â†’ Secrets
#   3. Copy the contents below and add your actual API key
# 
# For Local Development:
#   1. Copy this file to .streamlit/secrets.toml
#   2. Add your actual API key
#   3. The .streamlit/secrets.toml file is already in .gitignore
#
# For more information:
#   - User Guide: docs/user_guide/AI_SCHEDULE_ASSISTANT.md
#   - Setup Guide: docs/developer_guide/OPENAI_SETUP.md

# ============================================================================
# OpenAI Configuration (for AI Schedule Assistant)
# ============================================================================

[openai]
# Your OpenAI API key (get from platform.openai.com)
# Replace with your actual key starting with "sk-"
api_key = "sk-your-api-key-here"

# Model to use for schedule generation
# Options:
#   - "gpt-4o" (RECOMMENDED) - Best accuracy for complex schedules ($0.003-$0.005 per request)
#   - "gpt-4o-mini" - Faster and cheaper but may struggle with boundary logic ($0.0002-$0.0005 per request)
#   - "gpt-4" - Legacy model, most expensive (~$0.03-$0.05 per request)
# Note: Based on testing, gpt-4o is REQUIRED for reliable split-period handling
model = "gpt-4o"

# Maximum tokens for AI response
# Range: 1000-4000
# Recommended: 2000 (sufficient for most schedules)
max_tokens = 2000

# Temperature for AI generation (creativity vs consistency)
# Range: 0.0-2.0
# Recommended: 0.1 (very consistent, low creativity)
# Lower = more consistent, Higher = more creative
temperature = 0.1


